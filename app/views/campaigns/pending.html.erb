<%- model_class = Campaign -%>
<div class="page-header">
  <h1>Pending <%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:active) %></th>
      <th><%= model_class.human_attribute_name(:completed) %></th>
      <th><%= model_class.human_attribute_name(:start) %></th>
      <th><%= model_class.human_attribute_name(:stop) %></th>
      <th><%= model_class.human_attribute_name(:include_clips) %></th>
      <th><%= model_class.human_attribute_name(:include_only_clips) %></th>
      <th><%= model_class.human_attribute_name(:clip_pids) %></th>
      <th><%= model_class.human_attribute_name(:collection_pids) %></th>
      <th><%= model_class.human_attribute_name(:target_string) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= link_to campaign.id, campaign_path(campaign) %></td>
        <td><%= campaign.name %></td>
        <td><%= campaign.active %></td>
        <td><%= campaign.completed %></td>
        <td><%= campaign.start %></td>
        <td><%= campaign.stop %></td>
        <td><%= campaign.include_clips %></td>
        <td><%= campaign.include_only_clips %></td>
        <td><%= campaign.clip_pids %></td>
        <td><%= campaign.collection_pids %></td>
        <td><%= campaign.target_string %></td>
        <td><%=l campaign.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_campaign_path(campaign), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      campaign_path(campaign),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_campaign_path,
            :class => 'btn btn-primary' %>
