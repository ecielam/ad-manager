<%= form_for @campaign, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :active, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :active, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :completed, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :completed, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :start, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :stop, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :stop, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :include_clips, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :include_clips, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :include_only_clips, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :include_only_clips, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :clip_pids, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :clip_pids, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :collection_pids, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :collection_pids, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :target_string, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :target_string, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                campaigns_path, :class => 'btn' %>
  </div>
<% end %>
