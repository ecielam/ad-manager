<%- model_class = Campaign -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @campaign.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @campaign.active %></dd>
  <dt><strong><%= model_class.human_attribute_name(:completed) %>:</strong></dt>
  <dd><%= @campaign.completed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start) %>:</strong></dt>
  <dd><%= @campaign.start %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stop) %>:</strong></dt>
  <dd><%= @campaign.stop %></dd>
  <dt><strong><%= model_class.human_attribute_name(:include_clips) %>:</strong></dt>
  <dd><%= @campaign.include_clips %></dd>
  <dt><strong><%= model_class.human_attribute_name(:include_only_clips) %>:</strong></dt>
  <dd><%= @campaign.include_only_clips %></dd>
  <dt><strong><%= model_class.human_attribute_name(:clip_pids) %>:</strong></dt>
  <dd><%= display_value(@campaign.clip_pids) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:collection_pids) %>:</strong></dt>
  <dd><%= display_value(@campaign.collection_pids) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:target_string) %>:</strong></dt>
  <dd><%= display_value(@campaign.target_string) %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              campaigns_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_campaign_path(@campaign), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              campaign_path(@campaign),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
